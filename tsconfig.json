{
	"compilerOptions": {
		"strictNullChecks": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "es2020",
		"lib": ["es2020", "dom"],
		"outDir": "out",
		"sourceMap": true,
		"strict": true,
		"rootDir": ".",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules"]
}
